<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <description>URL del DataBase</description>
        <param-name>DB-URL</param-name>
        <param-value>jdbc:mysql://localhost:3306/ProgettoRipetizioni</param-value>
    </context-param>
    <context-param>
        <description>Account per accedere al DataBase (user)</description>
        <param-name>user</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <description>Account per accedere al DataBase (password)</description>
        <param-name>pwd</param-name>
        <param-value></param-value>
    </context-param>
    <session-config>
        <session-timeout> 10 </session-timeout>
    </session-config>
</web-app>